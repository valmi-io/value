# Application name and version
APP_NAME=value-engine
APP_VERSION=0.1.0

# FastAPI Server
SERVER_PORT=8000

# Redis (Celery Broker)
REDIS_PORT=6379

# Kafka
KAFKA_PORT=29092

# Zookeeper
ZOOKEEPER_PORT=2181

# OpenTelemetry Collector
OTEL_GRPC_PORT=4317
OTEL_HTTP_PORT=4318

# ClickHouse
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_INTERSERVER_PORT=9009

# Celery Flower (Monitoring UI)
FLOWER_PORT=5555

# Celery Broker (Redis)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Redis Connection
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Celery Worker Settings
CELERY_TASK_QUEUE=pipes
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_LOGLEVEL=info

# Celery Beat Settings (for periodic tasks)
CELERY_BEAT_ENABLED=true
CELERY_BEAT_LOGLEVEL=info

# Celery Flower Settings (monitoring UI)
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:password
FLOWER_URL_PREFIX=

# Kafka Settings
KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092,PLAINTEXT_HOST://localhost:29092
KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
KAFKA_INTER_BROKER_LISTENER_NAME=PLAINTEXT
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_AUTO_CREATE_TOPICS_ENABLE=true

# Kafka Bootstrap Servers (for clients connecting to Kafka)
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# ClickHouse Connection
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_DB=default
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=default

# Zookeeper Settings
ZOOKEEPER_CLIENT_PORT=2181
ZOOKEEPER_TICK_TIME=2000


# OpenTelemetry Collector
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318
OTEL_RESOURCE_ATTRIBUTES=service.name=otel-collector,service.version=0.1.0

# Environment
ENVIRONMENT=development

# Log Level
LOG_LEVEL=info
CONTROL_PLANE_URL=http://value-control-plane-backend:8200